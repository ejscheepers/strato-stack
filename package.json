{
  "name": "strato-stack",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "cross-env NODE_ENV=development tsx server.ts",
    "start": "tsx server.ts",
    "typecheck": "react-router typegen && tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:check": "drizzle-kit check",
    "db:studio": "npx drizzle-kit studio",
    "update-check": "npx npm-check-updates",
    "update-all": "npx npm-check-updates -u && npm install",
    "update-safe": "npx npm-check-updates -u --target minor && npm install",
    "update-router": "npx npm-check-updates -u \"/^@react-router\\/.*$/\" && npm install",
    "dev:infra": "docker compose -f docker-compose.dev.yaml up -d",
    "dev:infra:down": "docker compose -f docker-compose.dev.yaml down",
    "dev:infra:reset": "docker compose -f docker-compose.dev.yaml down -v"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.2",
    "@react-router/express": "^7.1.3",
    "@react-router/node": "^7.0.0",
    "@react-router/serve": "^7.0.0",
    "better-auth": "^1.0.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compression": "^1.8.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "isbot": "^5.1.17",
    "lucide-react": "^0.468.0",
    "morgan": "^1.10.0",
    "pg": "^8.13.1",
    "postgres": "^3.4.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.0.0",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@react-router/dev": "^7.0.0",
    "@react-router/fs-routes": "^7.0.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.13",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.29.1",
    "drizzle-orm": "^0.37.0",
    "esbuild": "^0.24.2",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}